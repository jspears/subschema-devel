{
  "plugin": "./src/plugin.js",
  "plugins": [
    "@mrbuilder/plugin-fonts",
    [
      "@mrbuilder/plugin-chunk",
      false
    ],
    "@mrbuilder/plugin-filetypes",
    [
      "@mrbuilder/plugin-css",
      {
        "modules": true,
        "useNameHash": false
      }
    ],
    "@mrbuilder/plugin-less",
    "subschema-plugin-autoloader"
  ],
  "env": {
    "test": {
      "plugins": [
        [
          "@mrbuilder/plugin-css",
          {
            "useNameHash": "[id].[hash].style.css"
          }
        ]
      ]
    },
    "subschema-web": {
      "plugins": [
        [
          "@mrbuilder/plugin-version",
          {
            "variable": "SUBSCHEMA_VERSION"
          }
        ],
        [
          "@mrbuilder/plugin-react",
          false
        ],
        [
          "@mrbuilder/plugin-css",
          {
            "useStyleLoader": true
          }
        ],
        [
          "@mrbuilder/plugin-webpack",
          {
            "libraryTarget": "var",
            "devtool": "source-map",
            "filename": "subschema.js",
            "outputPath": "./dist",
            "useExternals": false,
            "alias": {
              "react": "~react",
              "react-dom": "~react-dom"
            }
          }
        ]
      ]
    },
    "subschema-web-debug": {
      "plugins": [
        [
          "@mrbuilder/plugin-version",
          {
            "variable": "SUBSCHEMA_VERSION"
          }
        ],
        [
          "@mrbuilder/plugin-react",
          false
        ],
        [
          "@mrbuilder/plugin-css",
          {
            "useStyleLoader": true
          }
        ],
        [
          "@mrbuilder/plugin-webpack",
          {
            "libraryTarget": "var",
            "devtool": "inline-source-map",
            "filename": "subschema-debug.js",
            "outputPath": "./dist",
            "useExternals": false
          }
        ]
      ]
    },
    "subschema-server": {
      "plugins": [
        [
          "@mrbuilder/plugin-version",
          {
            "variable": "SUBSCHEMA_VERSION"
          }
        ],
        [
          "@mrbuilder/plugin-webpack",
          {
            "library": "commonjs",
            "devtool": "source-map",
            "filename": "subschema.server.js",
            "outputPath": "./dist",
            "target": "node"
          }
        ]
      ]
    },
    "subschema-noreact": {
      "plugins": [
        "@mrbuilder/plugin-react",
        [
          "@mrbuilder/plugin-version",
          {
            "variable": "SUBSCHEMA_VERSION"
          }
        ],
        [
          "@mrbuilder/plugin-webpack",
          {
            "libraryTarget": "umd",
            "library": "subschema",
            "devtool": "source-map",
            "filename": "subschema-noreact.js",
            "outputPath": "./dist"
          }
        ]
      ]
    }
  }
}