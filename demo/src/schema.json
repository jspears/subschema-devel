{
  "schema": {
    "edit": {
      "type": "ToggleLink",
      "label": "Edit",
      "name": "edit",
      "value": true,
      "className": "no-class",
      "template": false
    },
    "schema": {
      "type": "SchemaEditor",
      "template": false
    },
    "docs": {
      "type": "Navigate",
      "template": false,
      "label": "{.label}",
      "href": "/docs/{.val}"
    },
    "samples": {
      "type": "Navigate",
      "template": false,
      "label": "{.label}",
      "href": "/{.val}"
    },
    "main": {
      "type": "Routes",
      "routes": {
        "/docs/:Doc": "Doc",
        "/:example": "Example",
        "": "Index"
      }
    },
    "submit": {
      "type": "DisplayValueAndErrors",
      "template": false
    }
  },
  "fieldsets": [
    {
      "className": "container-fluid",
      "fieldsets": [
        {
          "template": "NavTemplate",
          "content": "Subschema v{subschemaVersion}",
          "fields": [
            "edit"
          ]
        },
        {
          "template": "ModalTemplate",
          "content": "Edit the app",
          "legend": "Edit Schema",
          "fields": "schema",
          "conditional": "@query.edit"
        },
        {
          "template": "ModalTemplate",
          "fields": [
            "submit"
          ],
          "content": "Values to be Submitted",
          "legend": "Submit Called",
          "buttons": [
            "Cancel"
          ],
          "conditional": "submit"
        },
        {
          "className": "row",
          "fieldsets": [
            {
              "className": "col-md-2 col-sm-3 col-xs-12",
              "fieldsets": [
                {
                  "legend": "Examples",
                  "template": "H3"
                },
                {
                  "fields": "docs",
                  "legend": "Documentation"
                },
                {
                  "fields": "samples",
                  "legend": "Examples"
                },
                {
                  "legend": "Develop",
                  "template": "H3"
                }
              ]
            },
            {
              "className": "col-md-10 col-sm-9 col-xs-12",
              "fields": [
                "main"
              ]
            }
          ]
        }
      ]
    }
  ]
}
